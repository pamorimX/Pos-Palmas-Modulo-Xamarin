<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Code_02.Pages.Page01">

    <!--Criamos um Layout (Stack Layout) para organizarmos nossos componentes-->
    <!--Padding= left, top, right, and bottom -->
    <!--Spacing: propriedade que define espaçamento entre um item e outro dentro do StackLayout-->
    <StackLayout Padding="10,20,5,0" Spacing="10" >
        <BoxView Color="Red" HeightRequest="50"/>
        <BoxView Color="Green" HeightRequest="200"/>
        <!--Inserindo Margin-->
    </StackLayout>
</ContentPage>